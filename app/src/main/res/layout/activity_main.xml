<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:weightSum="3"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/round_coner"
        >
            <EditText
                    android:id="@+id/edSearch"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@color/colorWhite"
                    android:hint="Search or type web address"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingStart="20dp"
                    android:layout_gravity="center_vertical">
                <requestFocus/>
            </EditText>
            <Button
                    android:id="@+id/btnSearch"
                    android:layout_marginTop="10dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/ic_mic_black_24dp"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal">
        <ImageButton
                android:id="@+id/btnCamera"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/camera"
                android:layout_weight="1"
                android:background="@color/colorBackground"/>
        <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                >
            <ImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:weightSum="2"
            android:gravity="center">
        <EditText
                android:id="@+id/edPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@color/colorWhite"
                android:layout_weight="1"
                android:hint="09 259698803"
                android:inputType="phone"
                android:fontFamily="sans-serif-condensed"
                android:paddingStart="20dp"
                android:layout_gravity="center_vertical"
        />
        <androidx.cardview.widget.CardView
                android:layout_marginLeft="16dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="50dp"
                android:layout_gravity="center"
                android:background="@color/colorWhite">
            <ImageButton
                    android:id="@+id/btnPhCall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_phone_in_talk_black_24dp"
                    android:background="@color/colorWhite"
                    android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>